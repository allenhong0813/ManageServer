    //Json Serialize to data
    //var datas = @*@Json.Serialize(Model.Machines);*@

    var IPName = "";
    var ServerName = "";

    initGrid();

    $("#jsGrid").jsGrid({
        width: "100%",
        height: "400px",


        filtering: false,
        editing: true,
        selecting: true,
        inserting: true,
        sorting: true,
        paging: false,
        autoload: false,

        deleteConfirm: "確定刪除這筆資料嗎？",

        controller: {
            loadData: function (filter) {
                return filter;
            },

            insertItem: function (item) {
                return $.ajax({
                    type: "POST",
                    url: "/ManageServer/InsertMachineData",
                    data: item
                });
            },

            updateItem: function (item) {
                return $.ajax({
                    type: "PUT",
                    url: "/ManageServer/UpdateMachineData",
                    data: item
                });
            },

            deleteItem: function (item) {
                return $.ajax({
                    type: "DELETE",
                    url: "/ManageServer/DeleteMachineData",
                    data: item
                });
            },
        },

        fields: [
            { name: "ip", type: "text", title: "IP", width: 100 },
            { name: "name", type: "text", title: "伺服器名稱", width: 80, },
            { name: "loginID", type: "text", title: "登入者帳號", width: 80 },
            { name: "password", type: "text", title: "密碼", width: 80 },
            { name: "os", type: "text", title: "系統", width: 100 },
            { name: "hostIP", type: "text", title: "本機IP", width: 100 },
            { name: "description", type: "text", title: "描述", width: 200 },
            { type: "control" }
        ]
    });

    function initGrid() {
        var d = $.Deferred();
        $.ajax({
            type: "GET",
            url: '/ManageServer/GetServerInf'
        }).done(function (response) {
            d.resolve(response);
            console.log(response);
            $("#jsGrid").jsGrid("loadData", response);
        });
        return d.promise();
    }

    //btn_query
    function query() {
        ipName = "";
        serverName = "";
        if ($("#inpIPName").val() != null && $("#inpIPName").val() != "")
            ipName = $("#inpIPName").val();

        if ($("#inpServerName").val() != null && $("#inpServerName").val() != "")
            serverName = $("#inpServerName").val();

        $.ajax({
            type: "GET",
            url: "/ManageServer/GetServerInf",
            data: {
                ipName: ipName,
                serverName: serverName
            }
        }).done(function (data) {
            $("#jsGrid").jsGrid("loadData", data);
        });
    }
</script>